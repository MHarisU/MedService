<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_blue_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Add Schedule"
            android:textColor="@color/white"
            android:textSize="@dimen/p1_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="end">


            <ImageView
                android:layout_width="@dimen/icon_size_3"
                android:layout_height="@dimen/icon_size_3"
                android:layout_gravity="center"
                android:onClick="closeAddSchedule"
                android:src="@drawable/close_white_new" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_for_sections"
        android:layout_marginEnd="@dimen/margin_for_sections"
        android:layout_marginTop="@dimen/margin_for_sections"
        android:layout_marginStart="@dimen/margin_for_sections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<!--        <TextView-->
<!--            android:onClick="openCalendar"-->
<!--            android:id="@+id/selectDate"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/edit_box_size"-->
<!--            android:layout_gravity=""-->
<!--            android:background="@drawable/new_editbox_background"-->
<!--            android:fontFamily="@font/open_sans_regular"-->
<!--            android:hint="Select Date"-->
<!--            android:padding="@dimen/padding_size_2"-->
<!--            android:paddingStart="@dimen/padding_size_2"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/p2_size" />-->

        <androidx.cardview.widget.CardView
            android:onClick="openCalendar"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:background="@drawable/black_stock_white_background"
            app:cardCornerRadius="@dimen/radius_normal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:onClick="openCalendar"
                    android:id="@+id/selectDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_size_1"
                    android:text="Select Date"
                    android:textSize="@dimen/p2_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_size_2"
                    android:gravity="end">


                    <ImageView
                        android:layout_width="@dimen/icon_size_3"
                        android:layout_height="@dimen/icon_size_3"
                        android:layout_gravity="center"
                        android:src="@drawable/calendar_blue_new" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_for_sections"
            android:layout_marginBottom="@dimen/margin_size_1"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="@dimen/edit_box_size"
                android:layout_marginEnd="@dimen/margin_size_1"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/radius_normal">

                <LinearLayout
                    android:onClick="fromTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/addFromTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_size_1"
                        android:hint="From"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end">

                        <ImageView
                            android:layout_width="@dimen/icon_size_1"
                            android:layout_height="@dimen/icon_size_1"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/clock_blue_new" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="@dimen/edit_box_size"
                android:layout_marginStart="@dimen/margin_size_1"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/radius_normal">

                <LinearLayout
                    android:onClick="toTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/addToTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_size_1"
                        android:hint="To"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end">

                        <ImageView
                            android:layout_width="@dimen/icon_size_1"
                            android:layout_height="@dimen/icon_size_1"
                            android:padding="10dp"
                            android:src="@drawable/clock_blue_new" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_marginTop="@dimen/margin_for_sections"
            android:layout_marginBottom="@dimen/margin_for_sections_half"
            android:background="@drawable/dark_blue_gradient_new"
            android:elevation="@dimen/shadow_lightest"
            android:fontFamily="@font/open_sans_regular"
            android:text="Add Schedule"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/closeScheduleDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_toRightOf="@id/request_button"
            android:background="@drawable/orange_background"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:onClick="closeOnCancel"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/p2_size" />

    </LinearLayout>

</LinearLayout>