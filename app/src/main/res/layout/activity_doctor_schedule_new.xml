<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUI.DoctorScheduleNewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_blue_gradient">


            <ImageView
                android:id="@+id/menu_bar_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:onClick="GoBackToMain"
                android:padding="@dimen/padding_size_1"

                android:src="@drawable/arrow_white_new" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:id="@+id/notification_new"
                    android:layout_width="@dimen/icon_size_1"
                    android:layout_height="@dimen/icon_size_1"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/menu_bar_new"
                    android:onClick="openNotifications"
                    android:padding="@dimen/padding_size_1"
                    android:src="@drawable/notifications_new" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/cart_new"
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/notification_new"
                        android:onClick="OpenCartActivity"
                        android:padding="@dimen/padding_size_1"
                        android:src="@drawable/cart_new" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_for_sections"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="My Schedule"
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/h3_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/addSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_box_size1"
                        android:layout_weight="1"
                        android:background="@drawable/dark_blue_gradient_new"
                        android:elevation="@dimen/shadow_light"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Add Schedule"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_for_sections_half"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="Date :"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="11-19-2022	"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="Start Time :"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="11:00 AM	"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="End Time :"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="05:00 PM	"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_for_sections_half"
                                android:layout_marginTop="@dimen/margin_for_sections_half"
                                android:layout_marginEnd="@dimen/margin_for_sections_half"
                                android:orientation="horizontal">


                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_size_4"
                                    android:background="@drawable/dark_blue_gradient_new"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:onClick="openDoctorNewAppointments"
                                    android:text="Appointments"
                                    android:textAllCaps="false"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/p2_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/editScheduleBtn"
                                    android:layout_width="150dp"
                                    android:layout_height="@dimen/button_size_4"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginEnd="@dimen/margin_size_1"
                                    android:layout_weight="1"
                                    android:background="@drawable/green_bg"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="Edit Schedule"
                                    android:textAllCaps="false"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/p2_size" />

                                <Button
                                    android:id="@+id/dltSchedule"
                                    android:layout_width="150dp"
                                    android:layout_height="@dimen/button_size_4"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:layout_marginBottom="@dimen/margin_size_3"
                                    android:layout_toRightOf="@id/request_button"
                                    android:layout_weight="1"
                                    android:background="@drawable/orange_background"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="Delete Schedule"
                                    android:textAllCaps="false"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/p2_size" />


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_for_sections_half"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="Date :"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="11-21-2022	"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="Start Time :"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="11:00 AM	"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="End Time :"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/open_sans_regular"
                                        android:gravity="start"
                                        android:text="05:00 PM	"
                                        android:textColor="@color/Black"
                                        android:textSize="@dimen/p4_size" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_for_sections_half"
                                android:layout_marginTop="@dimen/margin_for_sections_half"
                                android:layout_marginEnd="@dimen/margin_for_sections_half"
                                android:orientation="horizontal">


                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_size_4"
                                    android:background="@drawable/dark_blue_gradient_new"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="Appointments"
                                    android:textAllCaps="false"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/p2_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="150dp"
                                    android:layout_height="@dimen/button_size_4"
                                    android:layout_marginStart="@dimen/margin_size_3"
                                    android:layout_marginEnd="@dimen/margin_size_1"
                                    android:layout_weight="1"
                                    android:background="@drawable/green_bg"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="Edit Schedule"
                                    android:textAllCaps="false"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/p2_size" />

                                <Button
                                    android:layout_width="150dp"
                                    android:layout_height="@dimen/button_size_4"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginEnd="@dimen/margin_size_3"
                                    android:layout_marginBottom="@dimen/margin_size_3"
                                    android:layout_toRightOf="@id/request_button"
                                    android:layout_weight="1"
                                    android:background="@drawable/orange_background"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="Delete Schedule"
                                    android:textAllCaps="false"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/p2_size" />


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections"
            android:layout_marginEnd="@dimen/margin_for_sections"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardElevation="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Date"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/p2_size" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Start Time"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/p2_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="End Time"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/p2_size" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Action"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/p2_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/BlackLighter" />

        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>