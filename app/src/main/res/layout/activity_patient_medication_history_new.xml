<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewUI.PatientMedicationHistoryNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_blue_gradient">


        <ImageView
            android:id="@+id/menu_bar_new"
            android:layout_width="@dimen/icon_size_1"
            android:layout_height="@dimen/icon_size_1"
            android:layout_gravity="center"
            android:onClick="close"
            android:padding="@dimen/padding_size_1"
            android:src="@drawable/arrow_white_new" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_for_sections"
        android:layout_marginTop="@dimen/margin_for_sections"
        android:layout_marginBottom="@dimen/margin_size_1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication History"
            android:textColor="@color/BlackText"
            android:textSize="@dimen/h3_size"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_for_sections"
        android:layout_marginTop="@dimen/margin_for_sections_half"
        android:layout_marginEnd="@dimen/margin_for_sections"
        android:layout_marginBottom="@dimen/margin_for_sections_half"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_for_sections_half"
                    android:layout_marginTop="@dimen/margin_for_sections_half"
                    android:layout_marginEnd="@dimen/margin_for_sections_half"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections_half"
                        android:layout_marginTop="@dimen/margin_size_1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="start"
                            android:text="MEDICINE NAME	 "
                            android:textColor="@color/BlackLighter"
                            android:textSize="@dimen/p3_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:text="USAGE"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p3_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:text="SESSION DATE"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p3_size" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        android:background="@color/Black" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections_half"
                        android:layout_marginTop="@dimen/margin_size_3"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="start"
                            android:text="Acyclovir Tablet "
                            android:textColor="@color/BlackLighter"
                            android:textSize="@dimen/p4_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:text="Dosage: Every 12 for 90 days	"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p4_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:text="11-23-2022"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p4_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections_half"
                        android:layout_marginTop="@dimen/margin_size_3"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="start"
                            android:text="Clomipramine Capsule	"
                            android:textColor="@color/BlackLighter"
                            android:textSize="@dimen/p4_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:text="Dosage: Every 6 for 90 days	"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p4_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:text="11-23-2022
"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p4_size" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>




</LinearLayout>