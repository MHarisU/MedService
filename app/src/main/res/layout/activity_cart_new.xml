<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUI.CartNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_blue_gradient">


            <ImageView
                android:id="@+id/menu_bar_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:onClick="GoBackToMain"
                android:padding="@dimen/padding_size_1"

                android:src="@drawable/arrow_white_new" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginTop="@dimen/margin_for_sections"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Products"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/p1_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="end"
                        android:text="Clear Cart"
                        android:textColor="@color/skyblue"
                        android:textSize="@dimen/p2_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginTop="@dimen/margin_for_sections"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:elevation="@dimen/shadow_lightest"
                        app:cardCornerRadius="@dimen/radius_normal">


                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size_1"
                                android:layout_height="@dimen/icon_size_1"
                                android:layout_gravity="center"
                                android:src="@drawable/pharmacy_simple2" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Panadol Extra Tablet"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p2_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_size_1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="$15.00"
                                android:textColor="@color/DarkBlueNew"
                                android:textSize="@dimen/p2_size" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/radius_normal">

                            <LinearLayout
                                android:background="@drawable/new_editbox_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/icon_size_4"
                                    android:layout_height="@dimen/icon_size_4"
                                    android:layout_gravity="center"
                                    android:src="@drawable/remove_blue_new" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_size_3"
                            android:text="1"
                            android:textColor="@color/DarkBlueNew"
                            android:textSize="@dimen/p2_size" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_size_3"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/radius_normal">


                            <LinearLayout
                                android:background="@drawable/new_editbox_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/icon_size_4"
                                    android:layout_height="@dimen/icon_size_4"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_add" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginTop="@dimen/margin_for_sections_half"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:elevation="@dimen/shadow_lightest"
                        app:cardCornerRadius="@dimen/radius_normal">


                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size_1"
                                android:layout_height="@dimen/icon_size_1"
                                android:layout_gravity="center"
                                android:src="@drawable/pharmacy_simple2" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Panadol Extra Tablet"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/p2_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_size_1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="$15.00"
                                android:textColor="@color/DarkBlueNew"
                                android:textSize="@dimen/p2_size" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/radius_normal">

                            <LinearLayout
                                android:background="@drawable/new_editbox_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/icon_size_4"
                                    android:layout_height="@dimen/icon_size_4"
                                    android:layout_gravity="center"
                                    android:src="@drawable/remove_blue_new" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_size_3"
                            android:text="1"
                            android:textColor="@color/DarkBlueNew"
                            android:textSize="@dimen/p2_size" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_size_3"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/radius_normal">


                            <LinearLayout
                                android:background="@drawable/new_editbox_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/icon_size_4"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_add" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_for_sections"
                    app:cardCornerRadius="@dimen/radius_normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/new_editbox_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_for_sections"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Order Summary"
                            android:textSize="@dimen/p2_size"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/BlackLighter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginStart="@dimen/margin_for_sections"
                            android:layout_marginTop="@dimen/margin_for_sections"
                            android:layout_marginEnd="@dimen/margin_for_sections">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Total Item"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="2"
                                    android:textSize="@dimen/p2_size"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginStart="@dimen/margin_for_sections"
                            android:layout_marginTop="@dimen/margin_for_sections"
                            android:layout_marginEnd="@dimen/margin_for_sections">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Provider Fee"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="$6.00"
                                    android:textSize="@dimen/p2_size"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginStart="@dimen/margin_for_sections"
                            android:layout_marginTop="@dimen/margin_for_sections"
                            android:layout_marginEnd="@dimen/margin_for_sections">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Total Cost"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="$34.00
"
                                    android:textSize="@dimen/p2_size"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_for_sections"
                            android:background="@color/BlackLighter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginStart="@dimen/margin_for_sections"
                            android:layout_marginTop="@dimen/margin_for_sections"
                            android:layout_marginEnd="@dimen/margin_for_sections"
                            android:layout_marginBottom="@dimen/margin_for_sections">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Grand Total"
                                android:textColor="@color/DarkBlueNew"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="$40.00"
                                    android:textColor="@color/DarkBlueNew"
                                    android:textSize="@dimen/p2_size"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_marginBottom="@dimen/margin_for_sections"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_box_size"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginTop="@dimen/margin_for_sections_half"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:background="@drawable/dark_blue_gradient_new"
                    android:elevation="@dimen/shadow_lightest"
                    android:fontFamily="@font/open_sans_regular"
                    android:onClick="openCheckout"
                    android:text="Proceed to Checkout"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="@dimen/p2_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>