<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".NewUI.DoctorMainNewActivity"
    >


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_menu_header"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/DarkBlueNew"
        app:itemTextAppearance="@style/geo_sans_style"
        app:itemTextColor="@color/Gray"
        app:menu="@menu/drawer_menu">


    </com.google.android.material.navigation.NavigationView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_blue_gradient">


            <ImageView
                android:id="@+id/menu_bar_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:onClick="OpenDrawer"
                android:padding="@dimen/padding_size_1"
                android:src="@drawable/drawer_menu_button_new" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:id="@+id/notification_new"
                    android:layout_width="@dimen/icon_size_1"
                    android:layout_height="@dimen/icon_size_1"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/menu_bar_new"
                    android:onClick="openNotifications"
                    android:padding="@dimen/padding_size_1"
                    android:src="@drawable/notifications_new" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="OpenCartActivity">

                    <ImageView
                        android:id="@+id/cart_new"
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/notification_new"
                        android:padding="@dimen/padding_size_1"
                        android:src="@drawable/cart_new" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_for_sections">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Welcome to \nUmbrella Health Care Systems."
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/p1_size"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_box_size"
                        android:layout_weight="1"
                        android:background="@drawable/dark_blue_gradient_new"
                        android:elevation="@dimen/shadow_light"
                        android:fontFamily="@font/open_sans_regular"
                        android:onClick="OpenWaitingRoomNew"
                        android:text="Goto Waiting Room"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_size_1"
                        android:layout_marginBottom="@dimen/margin_size_1"
                        android:layout_weight="1"
                        android:onClick="openAllPatientsNew"
                        app:cardCornerRadius="@dimen/radius_normal">

                        <!--

                                                app:cardCornerRadius="@dimen/radius_normal"
                                                app:cardElevation="@dimen/shadow_lightest"
                                                -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_size_2">


                            <ImageView
                                android:layout_width="@dimen/icon_size_1"
                                android:layout_height="@dimen/icon_size_1"
                                android:src="@drawable/patient" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/padding_size_1"
                                android:text="All Patients"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_size_1"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:layout_marginBottom="@dimen/margin_size_1"
                        android:layout_weight="1"
                        android:onClick="OpenPendingAppointments"
                        app:cardCornerRadius="@dimen/radius_normal"


                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_size_2">


                            <ImageView
                                android:layout_width="@dimen/icon_size_1"
                                android:layout_height="@dimen/icon_size_1"
                                android:src="@drawable/appointments_simple" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/padding_size_1"
                                android:text="All Appointments"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold"


                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_size_1"
                        android:layout_marginEnd="@dimen/margin_size_1"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        android:layout_weight="1"
                        android:onClick="OpenTotalSessions"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_size_2">


                            <ImageView
                                android:layout_width="@dimen/icon_size_1"
                                android:layout_height="@dimen/icon_size_1"
                                android:src="@drawable/video_session" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/padding_size_1"
                                android:text="Total Sessions"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_size_1"
                        android:layout_marginTop="@dimen/margin_size_1"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        android:layout_weight="1"
                        android:onClick="OpenTotalEarnings"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_size_2">

                            <ImageView
                                android:layout_width="@dimen/icon_size_1"
                                android:layout_height="@dimen/icon_size_1"
                                android:src="@drawable/earning" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/padding_size_1"
                                android:text="Total Earnings"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold"


                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_size"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:onClick="openPatientReportsNew"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/icon_size_2"
                                android:layout_height="@dimen/icon_size_2"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:src="@drawable/report_simple" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:text="Patient Reports"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"

                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_size"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:onClick="OpenOnlineLabs"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/icon_size_2"
                                android:layout_height="@dimen/icon_size_2"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:src="@drawable/lab_simple2" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:text="Online Labs"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"

                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_size"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:onClick="openAddSchedule"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/icon_size_2"
                                android:layout_height="@dimen/icon_size_2"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:src="@drawable/schedules_simple" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:text="Schedule"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"

                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/box_size"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        android:onClick="OpenRefillRequest"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/new_editbox_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/icon_size_2"
                                android:layout_height="@dimen/icon_size_2"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:src="@drawable/refill1" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:text="Refill Requests"
                                android:textColor="@color/BlackText"
                                android:textSize="@dimen/p2_size"

                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


