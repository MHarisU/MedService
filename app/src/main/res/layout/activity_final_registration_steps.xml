<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewUI.FinalRegistrationStepsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_1"
        android:layout_marginEnd="@dimen/margin_for_sections_half"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/um_new_logo_mar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:text="Dr. Mohsin Magsi your account is being reviewed."
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Black"
        android:elevation="@dimen/shadow_lightest" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_size_1"
                android:text="Current status:"
                android:textSize="@dimen/p1_size"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_for_sections_half"
                app:cardCornerRadius="@dimen/radius_normal"
                app:cardElevation="@dimen/shadow_lightest"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_size4"
                        android:src="@drawable/registration" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Registration"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:background="@color/green"
                        android:gravity="center"
                        android:text="Step 1 - Complete"
                        android:textColor="@color/white"
                        android:textSize="@dimen/p1_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_size_1"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="start"
                android:text="Please Check Email"
                android:textColor="@color/Black"
                android:textSize="@dimen/p2_size"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_size_1"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_for_sections_half"
                app:cardCornerRadius="@dimen/radius_normal"
                app:cardElevation="@dimen/shadow_lightest"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_size4"
                        android:src="@drawable/email_verify" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_1"
                        android:gravity="center"
                        android:text="Email Verification"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:background="@color/orangeDark"
                        android:gravity="center"
                        android:text="Step 2 - In Progress"
                        android:textColor="@color/white"
                        android:textSize="@dimen/p1_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_size_1"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="Please verify your email address to accesss Umbrella Health Care System services. If you did not get it."
                android:textColor="@color/Black"
                android:textSize="@dimen/p2_size"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_size_1"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="start"
                android:text="Please Check Email"
                android:textColor="@color/Black"
                android:textSize="@dimen/p2_size"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_size_1"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_for_sections_half"
                app:cardCornerRadius="@dimen/radius_normal"
                app:cardElevation="@dimen/shadow_lightest"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_size4"
                        android:src="@drawable/contract" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Contract"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:background="@color/grayTransparent"
                        android:gravity="center"
                        android:text="Step 3 - Pending"
                        android:textColor="@color/white"
                        android:textSize="@dimen/p1_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_size_1"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_for_sections_half"
                app:cardCornerRadius="@dimen/radius_normal"
                app:cardElevation="@dimen/shadow_lightest"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_size4"
                        android:src="@drawable/approved" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Approved"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:background="@color/grayTransparent"
                        android:gravity="center"
                        android:text="Step 3 - Pending"
                        android:textColor="@color/white"
                        android:textSize="@dimen/p1_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>