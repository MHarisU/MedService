<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_blue_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Select Registration Type"
            android:textColor="@color/white"
            android:textSize="@dimen/p1_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="end">


            <ImageView
                android:layout_width="@dimen/icon_size_3"
                android:layout_height="@dimen/icon_size_3"
                android:layout_gravity="center"
                android:onClick="close"
                android:src="@drawable/close_white_new" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_marginEnd="@dimen/margin_for_sections_half"
        android:layout_marginStart="@dimen/margin_for_sections_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_for_sections"
        android:layout_marginBottom="@dimen/margin_size_1"
        android:orientation="horizontal">


        <Button
            android:layout_marginEnd="@dimen/margin_size_1"
            android:layout_weight="1"
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_gravity="center"
            android:background="@drawable/dark_blue_gradient_new"
            android:elevation="@dimen/shadow_normal"
            android:fontFamily="@font/open_sans_regular"
            android:onClick="openDoctorRegistration"
            android:text="Register as a Doctor"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />

        <Button
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_weight="1"
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_gravity="center"
            android:background="@drawable/dark_blue_gradient_new"
            android:elevation="@dimen/shadow_normal"
            android:fontFamily="@font/open_sans_regular"
            android:onClick="openPatientRegistration"
            android:text="Register as a Patient"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_for_sections"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.5"
            android:background="@color/grayTransparent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/open_sans_regular"
            android:text="OR"
            android:textColor="@color/Black"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="0.5"
            android:background="@color/grayTransparent" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/Register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:text="Already have a account?"
            android:textColor="@color/BlackText"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_for_sections_half"
            android:layout_toRightOf="@id/Register_text"
            android:fontFamily="@font/open_sans_regular"
            android:onClick="backToLogin"
            android:text="Login"
            android:textColor="@color/skyblue"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>