<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patientDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewUI.PatientMainNewActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_blue_gradient">


            <ImageView
                android:id="@+id/menu_bar_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:padding="@dimen/padding_size_1"
                android:onClick="OpenDrawer"
                android:src="@drawable/drawer_menu_button_new" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:onClick="openNotifications"
                    android:id="@+id/notification_new"
                    android:layout_width="@dimen/icon_size_1"
                    android:layout_height="@dimen/icon_size_1"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/menu_bar_new"
                    android:padding="@dimen/padding_size_1"
                    android:src="@drawable/notifications_new" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/cart_new"
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/notification_new"
                        android:onClick="OpenCartActivity"
                        android:padding="@dimen/padding_size_1"
                        android:src="@drawable/cart_new" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
            android:padding="@dimen/padding_for_sections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to \nUmbrella Health Care Systems."
            android:textColor="@color/BlackText"
            android:textSize="@dimen/p1_size"
            android:textStyle="bold" />

        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections"
            android:layout_marginBottom="@dimen/margin_for_sections_half"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest"

            >

            <LinearLayout
                android:background="@drawable/new_editbox_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:paddingStart="@dimen/padding_size_2"
                    android:id="@+id/reminder_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders"
                    android:textSize="@dimen/p2_size"
                    />


                <TextView
                    android:layout_marginStart="@dimen/margin_size_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/red"
                    android:textSize="@dimen/p2_size"
                    />



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">


            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginEnd="@dimen/margin_size_1"
                android:layout_weight="1"
                android:onClick="openPatientEVisit"
                app:cardCornerRadius="@dimen/radius_normal"
                >

                <!--

                                        app:cardCornerRadius="@dimen/radius_normal"
                                        app:cardElevation="@dimen/shadow_lightest"
                                        -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_size_2">


                    <ImageView
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:src="@drawable/evisit_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_size_1"
                        android:text="E-Visit"
                        android:textSize="@dimen/p2_size"
                        android:textColor="@color/BlackText"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_1"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_weight="1"
                android:onClick="oPenBookAppointment"
                app:cardCornerRadius="@dimen/radius_normal"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_size_2">


                    <ImageView
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:src="@drawable/book_appointment_new" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_size_1"
                        android:text="Book Appointment"
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold"


                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_for_sections"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginEnd="@dimen/margin_size_1"
                android:layout_marginBottom="@dimen/margin_for_sections_half"
                android:layout_weight="1"
                android:onClick="openOrderOnlineLabs"
                app:cardCornerRadius="@dimen/radius_normal"
                >

                <!--

                                        app:cardCornerRadius="@dimen/radius_normal"
                                        app:cardElevation="@dimen/shadow_lightest"
                                        -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_size_2">


                    <ImageView
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:src="@drawable/online_labs_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_size_1"
                        android:text="Order Online Labs"
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_1"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginEnd="@dimen/margin_for_sections"
                android:layout_marginBottom="@dimen/margin_for_sections_half"
                android:layout_weight="1"
                android:onClick="openPharmacy"
                app:cardCornerRadius="@dimen/radius_normal"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_editbox_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_size_2">


                    <ImageView
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:src="@drawable/order_pharmacy_new" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_size_1"
                        android:text="Order Pharmacy"
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold"


                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="@dimen/margin_for_sections"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:onClick="openMyDoctorsActivity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest"

            >

            <LinearLayout
                android:background="@drawable/new_editbox_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/icon_size_2"
                    android:layout_height="@dimen/icon_size_2"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:src="@drawable/doctors_new" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:text="My Doctors"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p2_size"

                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="openPatientAppointments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest"

            >

            <LinearLayout
                android:background="@drawable/new_editbox_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/icon_size_2"
                    android:layout_height="@dimen/icon_size_2"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:src="@drawable/appointments_simple" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:text="My Appointments"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p2_size"

                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest"

            >

            <LinearLayout
                android:background="@drawable/new_editbox_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/icon_size_2"
                    android:layout_height="@dimen/icon_size_2"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:src="@drawable/patient_reports_new" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:text="My Reports"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p2_size"

                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="openPatientOrders"
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest"

            >

            <LinearLayout
                android:background="@drawable/new_editbox_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/icon_size_2"
                    android:layout_height="@dimen/icon_size_2"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:src="@drawable/orders_cart_new" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_1"
                    android:text="My Orders"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p2_size"

                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>






    </LinearLayout>

    </ScrollView>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/patient_drawer_menu_header"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/DarkBlueNew"
        app:itemTextAppearance="@style/geo_sans_style"
        app:itemTextColor="@color/Gray"
        app:menu="@menu/drawer_menu_new">


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

