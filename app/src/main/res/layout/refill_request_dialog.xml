<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_blue_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Medicine Name"
            android:textColor="@color/white"
            android:textSize="@dimen/p1_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="end">


            <ImageView
                android:layout_width="@dimen/icon_size_3"
                android:layout_height="@dimen/icon_size_3"
                android:layout_gravity="center"
                android:onClick="close"
                android:src="@drawable/close_white_new" />


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December-05-2022"
        android:layout_marginStart="@dimen/margin_for_sections_half"
        android:layout_marginTop="@dimen/margin_for_sections_half"
        android:textSize="@dimen/p1_size"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_for_sections"
        android:layout_marginEnd="@dimen/margin_for_sections_half"
        android:layout_marginStart="@dimen/margin_for_sections_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of days"
            android:textSize="@dimen/p2_size"/>

        <TextView
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit"
            android:textSize="@dimen/p2_size"/>

        <TextView
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="@dimen/p2_size"/>



    </LinearLayout>


    <LinearLayout
        android:layout_marginEnd="@dimen/margin_for_sections_half"
        android:layout_marginStart="@dimen/margin_for_sections_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_for_sections_half"
        android:layout_marginBottom="@dimen/margin_size_1"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="@dimen/edit_box_size"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/radius_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_size_2"
                    android:text="90"
                    android:textSize="@dimen/p2_size"
                    android:textStyle="bold" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="@dimen/edit_box_size"
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/radius_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_size_2"
                    android:text="50/12.5mg"
                    android:textSize="@dimen/p2_size"
                    android:textStyle="bold" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="@dimen/edit_box_size"
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/radius_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_size_2"
                    android:text="10"
                    android:textSize="@dimen/p2_size"
                    android:textStyle="bold" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>





    <LinearLayout
        android:layout_marginBottom="@dimen/margin_for_sections"
        android:layout_marginEnd="@dimen/margin_for_sections_half"
        android:layout_marginTop="@dimen/margin_size_1"
        android:layout_marginStart="@dimen/margin_for_sections_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosage"
            android:textSize="@dimen/p2_size"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_size_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:background="@drawable/black_stock_white_background"
            app:cardCornerRadius="@dimen/radius_normal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/padding_size_2"
                    android:text="hrs"
                    android:textSize="@dimen/p2_size" />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Comments On Request"
            android:textSize="@dimen/p2_size"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_size_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:background="@drawable/black_stock_white_background"
            app:cardCornerRadius="@dimen/radius_normal">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/padding_size_2"
                    android:text="Please refill"
                    android:textSize="@dimen/p2_size" />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginStart="@dimen/margin_size_1"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Instructions"
            android:textSize="@dimen/p2_size"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_marginTop="@dimen/margin_size_1"
            android:elevation="@dimen/shadow_normal"
            app:cardCornerRadius="@dimen/radius_normal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparent"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="Add Comment"
                    android:paddingStart="@dimen/padding_size_2"
                    android:textSize="@dimen/p2_size" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>




        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_marginTop="@dimen/margin_for_sections"
            android:layout_marginBottom="@dimen/margin_for_sections_half"
            android:background="@drawable/dark_blue_gradient_new"
            android:elevation="@dimen/shadow_lightest"
            android:fontFamily="@font/open_sans_regular"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/p2_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/closeDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box_size"
            android:layout_toRightOf="@id/request_button"
            android:background="@drawable/orange_background"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:onClick="closeDialog"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/p2_size" />

    </LinearLayout>

</LinearLayout>