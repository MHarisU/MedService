<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--  Personal -->
            <LinearLayout
                android:id="@+id/personal_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background_button"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="7dp"
                        android:onClick="Close"
                        android:padding="10dp"
                        android:src="@drawable/ic_back_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="center"
                                android:text="Edit Details"
                                android:textColor="@color/White"
                                android:textSize="26sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:elevation="7dp"
                        android:onClick="Update"
                        android:padding="10dp"
                        android:src="@drawable/ic_done_finish_complete_white" />


                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/personalViewCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="visible"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="3dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/colorAccent"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="start"
                                    android:text="First Name:"
                                    android:textColor="@color/Gray"
                                    android:textSize="18sp"
                                    android:textStyle="" />

                                <EditText
                                    android:id="@+id/nameView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:background="@color/Transparent"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="center_vertical"
                                    android:hint="first"
                                    android:paddingStart="10dp"
                                    android:textColor="@color/Gray"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_margin="0dp"
                                android:background="@color/BlackLighter" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="3dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/colorAccent"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="start"
                                    android:text="Last Name:"
                                    android:textColor="@color/Gray"
                                    android:textSize="18sp"
                                    android:textStyle="" />

                                <EditText
                                    android:id="@+id/nameLastView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:background="@color/Transparent"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="center_vertical"
                                    android:hint="last"
                                    android:paddingStart="10dp"
                                    android:textColor="@color/Gray"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_margin="0dp"
                                android:background="@color/BlackLighter" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="3dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/colorAccent"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="start"
                                    android:text="D.O.B"
                                    android:textColor="@color/Gray"
                                    android:textSize="18sp"
                                    android:textStyle="" />

