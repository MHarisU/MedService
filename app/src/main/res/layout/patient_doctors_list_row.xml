<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewSupporter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"

           />

        <View
            android:id="@+id/viewBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/_10sdp"
             />


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/margin_for_sections_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginEnd="@dimen/margin_for_sections"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/shadow_lightest">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_2"
                    android:layout_marginTop="@dimen/margin_size_2"
                    android:layout_marginBottom="@dimen/margin_size_2">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/profile_size1"
                        android:layout_height="@dimen/profile_size1"
                        app:cardCornerRadius="@dimen/profile_size1_radius">


                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/p1_size"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/docFirstName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FirstName"
                                android:textSize="@dimen/p1_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/docLastName"
                                android:layout_marginStart="@dimen/margin_size_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LastName"
                                android:textSize="@dimen/p1_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/specialization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specialization"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/rating"
                            android:layout_marginStart="-12dp"
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="@dimen/margin_size_1"
                            android:src="@drawable/rating" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_size_2"
                    android:layout_marginEnd="@dimen/margin_size_2"
                    android:layout_marginBottom="@dimen/margin_size_2"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/viewDocBio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_size_4"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/dark_blue_gradient_new"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="View Bio"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />


                    <Button
                        android:onClick="openBookingAppointmentActivity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_size_4"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_bg"
                        android:elevation="1dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Book Appointment"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>