<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUI.PatientBookingAppoitmentDetailsNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_blue_gradient">


            <ImageView
                android:onClick="GoBackToDoctors"
                android:id="@+id/menu_bar_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:padding="@dimen/padding_size_1"
                android:src="@drawable/arrow_white_new" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Selected Doctor  "
                            android:textColor="@color/BlackText"
                            android:textSize="@dimen/p1_size"
                            android:textStyle="bold" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_for_sections"
                            android:layout_marginTop="@dimen/margin_for_sections_half"
                            android:layout_marginEnd="@dimen/margin_for_sections"
                            android:layout_marginBottom="@dimen/margin_for_sections_half"
                            app:cardCornerRadius="@dimen/radius_normal"
                            app:cardElevation="@dimen/shadow_lightest"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/new_editbox_background"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_size_2">


                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <androidx.cardview.widget.CardView
                                        android:layout_gravity=""
                                        android:layout_width="@dimen/profile_size1"
                                        android:layout_height="@dimen/profile_size1"
                                        app:cardCornerRadius="@dimen/profile_size1_radius">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/profile" />

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/padding_size_1"
                                    android:text="Dr. Haris Unar"
                                    android:textColor="@color/BlackText"
                                    android:textSize="@dimen/p1_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:textColor="@color/BlackText"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pain Management"
                                    android:textSize="@dimen/p4_size"
                                    />

                                <ImageView
                                    android:layout_marginStart="-12dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="@dimen/margin_size_1"
                                    android:src="@drawable/rating" />



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Appointment Details"
                            android:textColor="@color/BlackText"
                            android:textSize="@dimen/p1_size"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_for_sections"
                        android:layout_marginTop="@dimen/margin_for_sections_half"
                        android:layout_marginEnd="@dimen/margin_for_sections"
                        android:layout_marginBottom="@dimen/margin_for_sections_half"
                        app:cardCornerRadius="@dimen/radius_normal"
                        app:cardElevation="@dimen/shadow_lightest">




                            <LinearLayout
                                android:layout_margin="@dimen/margin_for_sections"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/White"
                                android:orientation="vertical">




                                <EditText
                                    android:id="@+id/editText_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="0dp"
                                    android:background="@drawable/new_editbox_background"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:hint="Select Symptoms*"
                                    android:inputType="text"
                                    android:padding="10dp"
                                    android:paddingStart="15dp"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="0dp">


                                    <Spinner
                                        android:id="@+id/spinner_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="@drawable/new_editbox_background"
                                        android:spinnerMode="dropdown" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:paddingStart="15dp"
                                        android:text="Available Dates*"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="5dp"
                                        android:src="@drawable/drop_downarrow_new" />

                                </RelativeLayout>



                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="0dp">


                                    <Spinner
                                        android:id="@+id/spinner_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="@drawable/new_editbox_background"
                                        android:spinnerMode="dropdown" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:paddingStart="15dp"
                                        android:text="Select Time*"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="5dp"
                                        android:src="@drawable/drop_downarrow_new" />

                                </RelativeLayout>


                            </LinearLayout>




                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardProgress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="30dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="@dimen/shadow_normal">

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp" />

                    </androidx.cardview.widget.CardView>


                    <Button
                        android:layout_margin="@dimen/margin_for_sections"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_box_size"
                        android:layout_weight="1"
                        android:background="@drawable/dark_blue_gradient_new"
                        android:elevation="@dimen/shadow_light"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Confirm Appointment"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/p2_size"
                        android:textStyle="bold" />






            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</LinearLayout>