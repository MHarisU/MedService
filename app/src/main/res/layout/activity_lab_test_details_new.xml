<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewUI.LabTestDetailsNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_blue_gradient">


        <ImageView
            android:id="@+id/menu_bar_new"
            android:layout_width="@dimen/icon_size_1"
            android:layout_height="@dimen/icon_size_1"
            android:layout_gravity="center"
            android:onClick="close"
            android:padding="@dimen/padding_size_1"
            android:src="@drawable/arrow_white_new" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <ImageView
                android:id="@+id/notification_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/menu_bar_new"
                android:padding="@dimen/padding_size_1"
                android:src="@drawable/notifications_new" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/cart_new"
                    android:layout_width="@dimen/icon_size_1"
                    android:layout_height="@dimen/icon_size_1"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/notification_new"
                    android:padding="@dimen/padding_size_1"
                    android:src="@drawable/cart_new" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/margin_for_sections_half"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections_half"
            android:layout_marginStart="@dimen/margin_for_sections_half"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/radius_normal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_editbox_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_for_sections"
            android:layout_marginTop="@dimen/margin_for_sections_half"
            android:layout_marginEnd="@dimen/margin_for_sections"
            android:layout_marginBottom="@dimen/margin_for_sections_half"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group Type (ABO GROUP AND RH TYPE)"
                    android:textColor="@color/DarkBlueNew"
                    android:textSize="@dimen/h3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_3">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 35.00"
                    android:textColor="@color/skyblue"
                    android:textSize="@dimen/h3_size"
                    android:textStyle="bold" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Description"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This common blood test screens for a variety of health conditions. Evaluating the 3 types of cells in your blood—red, white, and platelets—it can help detect possible infections, inflammation, and more. Red blood cells carry oxygen throughout your body. Abnormal levels can help identify conditions such as anaemia, malnutrition, leukaemia, and others. White blood cells are an important part of your immune system, and abnormal levels may mean your body is fighting an infection. Platelets help your blood clot normally. This test does not require fasting."
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_size_1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clinical Significance"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CBC (H/H, RBC, Indices, WBC, Plt) - A complete blood count is used as a screening test for various disease states to include: anemia, leukemia and inflammatory processes."
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Specimen(s)"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whole blood from a full EDTA (lavender-top) tube"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Volume"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microtainer 0.5 mL \n1 mL whole blood EDTA (lavender-top) tube"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collection Instructions"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maintain specimen at room temperature. Do not refrigerate. If multiple draw, collect EDTA (lavender-top) tube last. Traumatic draw can introduce thromboplastin and trap WBC and platelets. Refrigeration can precipitate fibrin and trap WBC and platelets"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport Container"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDTA (lavender-top) tube"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport Temperature"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room temperature"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specimen Stability"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room temperature: 48 hours\nRefrigerated: 48 hours (may cause platelet clumping)\nFrozen: Unacceptable"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject Criteria"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hemolysis • Clotted • Received frozen"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Includes"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WBC, RBC, Hemoglobin, Hematocrit, MCV, MCH, MCHC, RDW, Platelet Count"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Methodology"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronic Cell Sizing/Counting/Cytometry/Microscopy"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_sections_half"
                android:layout_marginBottom="@dimen/margin_for_sections_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reference Range(s)"
                    android:textColor="@color/BlackText"
                    android:textSize="@dimen/p1_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_for_sections">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Laboratory Report"
                    android:textColor="@color/BlackLighter"
                    android:textSize="@dimen/p3_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:layout_marginLeft="@dimen/margin_for_sections"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_gradient_new"
                    android:text="Add to cart"
                    android:textColor="@color/white"/>

            </LinearLayout>



        </LinearLayout>

            </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>



</LinearLayout>