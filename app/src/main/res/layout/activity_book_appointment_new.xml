<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUI.BookAppointmentNewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_blue_gradient">


            <ImageView
                android:onClick="GoBackToMain"
                android:id="@+id/menu_bar_new"
                android:layout_width="@dimen/icon_size_1"
                android:layout_height="@dimen/icon_size_1"
                android:layout_gravity="center"
                android:padding="@dimen/padding_size_1"
                android:src="@drawable/arrow_white_new" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:id="@+id/notification_new"
                    android:layout_width="@dimen/icon_size_1"
                    android:layout_height="@dimen/icon_size_1"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/menu_bar_new"
                    android:padding="@dimen/padding_size_1"
                    android:src="@drawable/notifications_new" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/cart_new"
                        android:layout_width="@dimen/icon_size_1"
                        android:layout_height="@dimen/icon_size_1"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/notification_new"
                        android:onClick="OpenCartActivity"
                        android:padding="@dimen/padding_size_1"
                        android:src="@drawable/cart_new" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_for_sections">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specializations"
                        android:textColor="@color/DarkBlueNew"
                        android:textSize="@dimen/h3_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Your Desire Specialize To Book An Appointment"
                        android:textColor="@color/Gray"
                        android:textSize="@dimen/p2_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginTop="@dimen/margin_for_sections_half"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="openAllDoctors"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginEnd="@dimen/margin_size_1"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/radius_normal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/toolbar_blue_gradient">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="center"
                                    android:text="Psychiatrists"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/p1_size"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_for_sections"
                                android:text="Service Type: E-Visit"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:text="Initial Price: $95"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Follow-Up Price:$50"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="openAllDoctors"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginStart="@dimen/margin_size_1"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/radius_normal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/toolbar_blue_gradient">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="center"
                                    android:text="Primary Care"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/p1_size"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="25dp"
                                android:text="Service Type: E-Visit"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Price: $50"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_for_sections"
                    android:layout_marginTop="@dimen/margin_for_sections_half"
                    android:layout_marginEnd="@dimen/margin_for_sections"
                    android:layout_marginBottom="@dimen/margin_for_sections_half"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="openAllDoctors"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginEnd="@dimen/margin_size_1"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/radius_normal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/toolbar_blue_gradient">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="center"
                                    android:text="Pain Management"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/p1_size"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_for_sections"
                                android:text="Service Type: E-Visit"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:text="Initial Price: $95"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Follow-Up Price:$50"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/p2_size"
                                android:textStyle="bold" />



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="openAllDoctors"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginStart="@dimen/margin_size_1"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/radius_normal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_editbox_background"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/toolbar_blue_gradient">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="center"
                                    android:text="Substance Abuse"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/p1_size"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="25dp"
                                android:text="Service Type: E-Visit"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="@dimen/margin_size_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Price: $50"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>