<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="Finish"
                android:padding="10dp"
                android:src="@drawable/ic_back_black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_regular"
                android:text="Change Password"
                android:textColor="@color/Gray"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/uploadImageIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:onClick="ChangePassword"
                android:padding="10dp"
                android:src="@drawable/ic_done_finish_complete_blue"
                android:visibility="visible" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editText_password_current"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/black_stock_white_background"
        android:fontFamily="@font/open_sans_regular"
        android:hint=" Current Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText_password"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/black_stock_white_background"
        android:fontFamily="@font/open_sans_regular"
        android:hint=" New Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#000"
        android:textSize="15sp" />



    <EditText
        android:id="@+id/editText_password_c"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/black_stock_white_background"
        android:fontFamily="@font/open_sans_regular"
        android:hint=" Confirm New Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/geo_sans_light"
        android:text="Forgot Password"
        android:textColor="@color/skybluedark"
        android:textSize="20sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:onClick="ChangePassword"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="22sp"
            android:fontFamily="@font/geo_sans_light"
            android:visibility="visible"

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_background_button"
            android:text="CHANGE" />

    </RelativeLayout>


</LinearLayout>