<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView

            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/um_new_logo_mar"/>



        <LinearLayout
            android:layout_marginBottom="@dimen/margin_size_1"
            android:layout_marginTop="@dimen/margin_size_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/h3_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Dashboard"
                android:textColor="@color/DarkBlueNew"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/Black"
            android:elevation="@dimen/shadow_lightest"/>

    </LinearLayout>



</LinearLayout>

